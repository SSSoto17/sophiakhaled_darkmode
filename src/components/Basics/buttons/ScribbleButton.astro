<style>

    a {
        width: max-content;
    }

    a:hover {
        opacity: 1;
    }

    .container {
        position: relative;
        aspect-ratio: 2/1;
        max-width: 283px;
        min-width: 256px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .btn {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
    }

    svg, img {
        position: absolute;
        height: auto;
    }

    svg.sparkle {
        width: 90%;
        opacity: 0;
        transition: all .15s ease-in;
        animation-name: sparkle;
        animation-duration: .75s;
        animation-iteration-count: infinite;
        animation-fill-mode: both;
    }

    svg.sparkle path {
        stroke: var(--sparkle);
    }

    svg.scribble {
        width: 65%;
    }

    svg.scribble path {
        stroke: var(--scribble);
    }

    .container:hover svg.sparkle {
        opacity: 1;
        width: 100%;
    }

    @keyframes sparkle {
        from {
            width: 100%;
        }
        50% {
            width: 95%;
        }
        to {
            width: 100%;
        }
    }


</style>