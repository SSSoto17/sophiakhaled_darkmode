---
const { label, variant, href } =Astro.props

---
<a href={href}>
    <button>
        <p class="button">{label}</p>
        <svg class={variant} width="25" height="24" viewBox="0 0 25 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M24.7071 12.7071C25.0976 12.3166 25.0976 11.6834 24.7071 11.2929L18.3431 4.92893C17.9526 4.53841 17.3195 4.53841 16.9289 4.92893C16.5384 5.31946 16.5384 5.95262 16.9289 6.34315L22.5858 12L16.9289 17.6569C16.5384 18.0474 16.5384 18.6805 16.9289 19.0711C17.3195 19.4616 17.9526 19.4616 18.3431 19.0711L24.7071 12.7071ZM0 13H24V11H0V13Z" fill="#2B2433"/>
        </svg>
    </button>
</a>

<style>

    button {
        display: flex;
        justify-content: center;
        gap: var(--medium);
        padding: var(--x-small);
        border-bottom: 1px solid var(--body-color);
        max-width: max-content;
    }

    svg {
        --size: var(--medium);
        width: var(--size);
        height: var(--size);
    }

    svg path {
        fill: var(--body-color);
    }
    button, svg {
        transition: all .15s ease-in-out;
    }
    .down {
        transform: rotate(90deg);
    }

    button:hover {
        opacity: .5;
    }

    button:hover svg {
        transform: translateX(4px);
    }

    button:hover svg.down {
        transform: rotate(90deg) translateX(4px);
    }

    .hide {
        display: none;
    }

</style>